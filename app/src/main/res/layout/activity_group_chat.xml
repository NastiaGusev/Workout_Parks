<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey3"
    tools:context=".activities.Activity_GroupChat">

    <ImageButton
        android:id="@+id/groupChat_BTN_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/img_back"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:scaleType="centerCrop"
        android:layout_margin="10dp"
        >
    </ImageButton>

    <TextView
        android:id="@+id/groupChat_TXT_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Park"
        android:textSize="20sp"
        android:layout_toEndOf="@+id/groupChat_BTN_back"
        android:layout_alignBottom="@+id/groupChat_BTN_back"
        android:textStyle="bold"
        >
    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/groupChat_RCV_recycleView"
        android:layout_width="match_parent"
        android:layout_height="764dp"
        android:layout_below="@+id/groupChat_BTN_back"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/groupChat_LAY_view"
       >
    </androidx.recyclerview.widget.RecyclerView>

    <View
        android:id="@+id/groupChat_LAY_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e0e0e0"
        android:layout_alignTop="@+id/groupChat_LAY_msg" />

    <RelativeLayout
        android:id="@+id/groupChat_LAY_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/groupChat_LAY_navigator"
        >

        <EditText
            android:id="@+id/groupChat_TXT_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:hint="Enter message"
            android:inputType="text"
            android:maxLines="4"
            android:textAlignment="viewStart"
            >
        </EditText>

        <ImageButton
            android:id="@+id/groupChat_IBTN_send"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@android:color/transparent"
            android:src="@drawable/img_send"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            >

        </ImageButton>
    </RelativeLayout>

    <View
        android:id="@+id/groupChat_LAY_view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e0e0e0"
        android:layout_alignTop="@+id/groupChat_LAY_navigator"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/groupChat_LAY_navigator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:elevation="5dp"
        app:cardElevation="5dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                >

                <ImageButton
                    android:id="@+id/favorites_BTN_home"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/img_home"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="8dp"
                    >
                </ImageButton>

                <ImageButton
                    android:id="@+id/favorites_BTN_parks"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/img_location"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:scaleType="centerCrop"
                    android:layout_toEndOf="@+id/favorites_BTN_home"
                    android:layout_alignTop="@+id/favorites_BTN_home"
                    android:layout_marginStart="48dp"
                    >
                </ImageButton>

                <ImageButton
                    android:id="@+id/favorites_BTN_chats"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/img_chat"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:scaleType="centerCrop"
                    android:layout_toEndOf="@+id/favorites_BTN_parks"
                    android:layout_alignTop="@+id/favorites_BTN_home"
                    android:layout_marginStart="48dp"
                    >
                </ImageButton>

                <ImageButton
                    android:id="@+id/favorites_BTN_favorites"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/img_favorite_24"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:scaleType="centerCrop"
                    android:layout_toEndOf="@+id/favorites_BTN_chats"
                    android:layout_alignTop="@+id/favorites_BTN_home"
                    android:layout_marginStart="48dp"
                    >
                </ImageButton>
            </RelativeLayout>
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>