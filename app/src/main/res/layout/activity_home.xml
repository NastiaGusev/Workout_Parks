<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Activity_Home">

    <TextView
        android:id="@+id/home_LBL_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Welcome Back!"
        android:textColor="@color/grey"
        android:textSize="20sp"
        android:textStyle="italic"
        >
    </TextView>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/login_IMG_user"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:src="@drawable/user"
        app:shapeAppearanceOverlay="@style/CircleImageView"
        android:layout_below="@+id/home_LBL_welcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        >
    </com.google.android.material.imageview.ShapeableImageView>

    <TextView
        android:id="@+id/post_LBL_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_IMG_user"
        android:layout_centerHorizontal="true"
        android:text="User User"
        android:textColor="@color/grey"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        >

    </TextView>

    <ImageView
        android:id="@+id/home_IMG_parks"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/icon"
        android:layout_marginTop="50dp"
        android:layout_marginStart="40dp"
        android:layout_below="@+id/post_LBL_user"
        >
    </ImageView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/home_BTN_parks"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_IMG_parks"
        android:layout_alignStart="@+id/home_IMG_parks"
        android:layout_marginTop="2dp"
        android:backgroundTint="@color/main_color"
        android:text="parks"
        android:textColor="@color/white"
        android:textSize="11sp"
        app:cornerRadius="150dp"
        app:rippleColor="@color/main_color"
        app:strokeColor="@color/main_color">

    </com.google.android.material.button.MaterialButton>

    <ImageView
        android:id="@+id/home_IMG_favorites"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/star"
        android:layout_alignTop="@+id/home_IMG_parks"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        >
    </ImageView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/home_BTN_favorites"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_IMG_favorites"
        android:layout_alignEnd="@+id/home_IMG_favorites"
        android:text="favorites"
        app:cornerRadius="150dp"
        android:textSize="11sp"
        app:strokeColor="@color/main_color"
        android:textColor="@color/white"
        app:rippleColor="@color/main_color"
        android:backgroundTint="@color/main_color"
        >
    </com.google.android.material.button.MaterialButton>


    <ImageView
        android:id="@+id/home_IMG_settings"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/home_BTN_favorites"
        android:layout_alignEnd="@+id/home_IMG_favorites"
        android:layout_marginTop="50dp"
        android:src="@drawable/settings">

    </ImageView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/home_BTN_settings"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_IMG_settings"
        android:layout_alignEnd="@+id/home_IMG_favorites"
        android:text="settings"
        app:cornerRadius="150dp"
        android:textSize="11sp"
        app:strokeColor="@color/main_color"
        android:textColor="@color/white"
        app:rippleColor="@color/main_color"
        android:backgroundTint="@color/main_color"
        >
    </com.google.android.material.button.MaterialButton>

    <ImageView
        android:id="@+id/home_IMG_friends"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/friends"
        android:layout_below="@+id/home_BTN_parks"
        android:layout_marginTop="50dp"
        android:layout_alignStart="@+id/home_IMG_parks"
        >
    </ImageView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/home_BTN_friends"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_IMG_friends"
        android:layout_alignStart="@+id/home_IMG_parks"
        android:text="friends"
        android:textSize="11sp"
        app:cornerRadius="150dp"
        app:strokeColor="@color/main_color"
        android:textColor="@color/white"
        app:rippleColor="@color/main_color"
        android:backgroundTint="@color/main_color"
        >
    </com.google.android.material.button.MaterialButton>

</RelativeLayout>