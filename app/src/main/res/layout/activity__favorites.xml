<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey3"
    tools:context=".activities.Activity_Favorites">

    <TextView
        android:id="@+id/favorites_TXT_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="favorites"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textSize="30sp"
        >
    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/favorites_LST_userList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/favorites_TXT_title"
        android:layout_above="@+id/favorites_LAY_menu"
        android:background="@color/light_grey3"
        tools:listitem= "@layout/list_parkfav">

    </androidx.recyclerview.widget.RecyclerView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/favorites_LAY_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignParentBottom="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                >
                <ImageButton
                    android:id="@+id/favorites_BTN_home"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/img_home"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="8dp"
                    >
                </ImageButton>

                <ImageButton
                    android:id="@+id/favorites_BTN_parks"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/img_location"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:scaleType="centerCrop"
                    android:layout_toEndOf="@+id/favorites_BTN_home"
                    android:layout_alignTop="@+id/favorites_BTN_home"
                    android:layout_marginStart="48dp"
                    >
                </ImageButton>

                <ImageButton
                    android:id="@+id/favorites_BTN_chats"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/img_chat"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:scaleType="centerCrop"
                    android:layout_toEndOf="@+id/favorites_BTN_parks"
                    android:layout_alignTop="@+id/favorites_BTN_home"
                    android:layout_marginStart="48dp"
                    >
                </ImageButton>

                <ImageButton
                    android:id="@+id/favorites_BTN_favorites"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/img_favorite_2"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:scaleType="centerCrop"
                    android:layout_toEndOf="@+id/favorites_BTN_chats"
                    android:layout_alignTop="@+id/favorites_BTN_home"
                    android:layout_marginStart="48dp"
                    >
                </ImageButton>

            </RelativeLayout>

        </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>