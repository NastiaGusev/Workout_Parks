<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.workoutparks">
    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the "MyLocation" functionality.
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WorkoutParks">
        <activity
            android:name=".activities.Activity_GroupChat"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity android:name=".activities.Activity_ParkInfo" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBEr6hQlYrpubjUqs9jztjD5rUa7qqYrqc" />

        <activity android:name=".activities.Activity_Parks" />
        <activity android:name=".activities.Activity_Login" />
        <activity android:name=".activities.Activity_Home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>